<div class="vh-100 d-flex justify-content-center flex-column align-items-center">

<h2 class='mb-2'>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:'form-group') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group mb-2">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "First name" %>
  </div>
   <div class="form-group mb-2">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "Last name" %>
  </div>



  <div class="form-group mb-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters min)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group mb-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="d-flex ">
  <div class="actions mb-2">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
    <%= link_to "Log in", new_session_path(resource_name), class:'btn btn-secondary' %><br />
  </div>
</div>
<% end %>


</div>
